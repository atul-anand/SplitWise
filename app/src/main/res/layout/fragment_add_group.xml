<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.zemoso.atul.splitwise.fragments.AddGroup">

    <TextView
        android:id="@+id/add_group_heading"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_user_heading_height"
        android:padding="10dp"
        android:text="@string/add_group_heading"
        android:textAlignment="center"
        android:textSize="@dimen/list_item_1"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/add_group_name"
        android:layout_width="@dimen/user_edit_width"
        android:layout_height="@dimen/user_edit_height"
        android:layout_gravity="center_horizontal"
        android:hint="@string/add_group_name_edit"
        android:textAlignment="center" />
    <Button
        android:id="@+id/add_group_create"
        android:layout_width="130dp"
        android:layout_height="@dimen/buttonHeight"
        android:layout_gravity="center_horizontal"
        android:background="@color/color_add_member_active"
        android:text="@string/add_group_create"
        android:textColor="@color/colorWhite" />

</LinearLayout>
