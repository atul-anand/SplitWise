<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zemoso.atul.splitwise.fragments.MultiSelectionDialog">


    <TextView
        android:id="@+id/lb_heading"
        android:layout_width="360dp"
        android:layout_height="@dimen/lb_heading_height"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lb_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/lb_submit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/lb_row_height"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:background="@color/colorGrey"
        android:text="@string/lb_submit" />
</LinearLayout>
