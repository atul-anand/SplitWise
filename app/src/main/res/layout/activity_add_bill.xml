<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zemoso.atul.splitwise.activities.AddBill">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bill_category_height"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/bill_category"
            android:layout_width="@dimen/bill_category_width"
            android:layout_height="match_parent"
            android:src="@drawable/category_loading_image"/>
        <LinearLayout
            android:layout_width="@dimen/bill_description_width"
            android:layout_height="@dimen/bill_category_height"
            android:orientation="vertical">
            <EditText
                android:id="@+id/bill_description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bill_description_height"
                android:hint="@string/bill_description"/>
            <LinearLayout
                android:layout_width="@dimen/bill_description_width"
                android:layout_height="@dimen/bill_currency_height"
                android:orientation="horizontal">
                <Button
                    android:background="@drawable/bill_currency"
                    android:id="@+id/bill_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/bill_currency_height" />

                <EditText
                    android:id="@+id/bill_value"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/bill_value_height"
                    android:hint="@string/bill_value"
                    android:textSize="@dimen/bill_value_font" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
