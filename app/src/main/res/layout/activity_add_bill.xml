<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/bill_description_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.zemoso.atul.splitwise.activities.AddBill">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_label_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/bill_label_description"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bill_description"
                android:layout_width="@dimen/bill_description_width"
                android:layout_height="@dimen/bill_description_height"
                android:hint="@string/bill_description"


                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bill_label_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/bill_label_group"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <Spinner
                android:id="@+id/bill_select_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:textSize="22sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/lender_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/bill_label_lender"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/bill_label_lender"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/lb_select_lenders"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bill_description_height"
            android:clickable="true"
            android:gravity="center_vertical"
            android:hint="@string/lender_heading"
            android:inputType="text"
            android:paddingStart="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp" />
    </LinearLayout>
        <LinearLayout
            android:id="@+id/borrower_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/bill_label_borrower"
                android:layout_width="130dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/bill_label_borrower"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/lb_select_borrowers"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bill_description_height"
                android:clickable="true"
                android:gravity="center_vertical"
                android:hint="@string/borrower_heading"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bill_single_value_head"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingStart="10dp"
                android:text="@string/bill_amount"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/bill_single_value_amt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/bill_card_value"
                android:inputType="numberDecimal"
                android:paddingEnd="20dp"
                android:paddingStart="10dp"
                android:textColor="@color/colorPrimary"
                android:textSize="22sp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bill_label_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/bill_label_date"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <EditText

            android:id="@+id/bill_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:hint="@string/bill_date"
            android:inputType="date"
            android:paddingStart="10dp"
            android:textColor="@color/colorPrimary"
            android:textSize="22sp"
            android:textStyle="normal">

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/bill_label_mop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:text="@string/bill_label_mop"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/bill_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:textSize="22sp" />
    </LinearLayout>

</LinearLayout>
</android.support.v7.widget.CardView>



