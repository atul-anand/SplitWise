<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_holder"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    app:cardCornerRadius="@dimen/cardview_default_radius"
    app:cardElevation="@dimen/card_elevation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/card_avatar"
            android:layout_width="@dimen/card_profile_pic_height"
            android:layout_height="@dimen/card_profile_pic_height"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/button_padding"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/button_padding" />
        <TextView
            android:id="@+id/card_heading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/card_avatar"
            android:layout_toStartOf="@+id/card_status"
            android:textSize="@dimen/list_item_1" />
        <!--<TextView-->
        <!--android:id="@+id/card_status"-->
        <!--android:layout_width="@dimen/status_box_width"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:layout_centerVertical="true" />-->
    </RelativeLayout>
</android.support.v7.widget.CardView>