    <android.support.v7.widget.CardView
        android:id="@+id/card_email"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/icon_email"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_email_black_24dp" />

        <TextView
            android:id="@+id/profile_email_label"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="@string/detail_email"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:textSize="22sp" />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_debt"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_email">

        <ImageView
            android:id="@+id/icon_debt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_attach_money_white_24dp" />

        <TextView
            android:id="@+id/profile_debt_heading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="10dp"
            android:padding="5dp"
            android:text="@string/detail_debt"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/profile_status"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:textSize="25sp" />
    </android.support.v7.widget.CardView>


