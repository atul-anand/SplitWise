<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zemoso.atul.splitwise.fragments.Groups">

    <LinearLayout
        android:id="@+id/groups_balance"
        android:layout_width="match_parent"
        android:layout_height="@dimen/totalBalance"
        android:orientation="vertical"
        android:background="@color/colorTotalBalance">
        <include layout="@layout/component_total_balance"/>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/groups_balance"
        android:id="@+id/recycler_groups" />
    <Button
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="@dimen/button_top_margin"
        android:layout_width="match_parent"
        android:padding="@dimen/button_padding"
        android:layout_height="@dimen/buttonHeight"
        android:layout_below="@id/recycler_groups"
        android:text="@string/addGroup"/>

</RelativeLayout>
