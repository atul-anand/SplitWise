<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/group_detail_card_height">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/group_detail_debtor"
            android:layout_width="@dimen/group_detail_text_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="@dimen/group_detail_arrow_width"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/group_detail_amount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/group_detail_amount_height"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:textAlignment="center"
                android:textColor="@color/colorBlack"
                android:textSize="12sp" />

            <ImageView

                android:layout_width="@dimen/group_detail_arrow_width"
                android:layout_height="match_parent"
                android:background="@drawable/arrow" />
        </FrameLayout>

        <TextView
            android:id="@+id/group_detail_creditor"
            android:layout_width="@dimen/group_detail_text_width"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:paddingTop="20dp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp" />
    </LinearLayout>
</android.support.v7.widget.CardView>