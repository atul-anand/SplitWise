<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="@dimen/profile_image"
        android:layout_height="@dimen/profile_image"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/profile_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_profile_heading"
        android:layout_gravity="center"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_profile_email"
        android:layout_gravity="center"
        android:padding="5dp"/>
    <TextView
        android:id="@+id/profile_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_profile_status"
        android:layout_gravity="center"
        android:padding="5dp"/>
    <Button
        android:id="@+id/profile_settleUp"
        android:layout_width="@dimen/profile_button_width"
        android:layout_height="@dimen/profile_button_height"
        android:layout_gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorButtonSettleUp"
        android:text="@string/settleUp"/>
</LinearLayout>